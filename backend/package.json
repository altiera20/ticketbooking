{
    "name": "universal-ticket-booking-backend",
    "version": "1.0.0",
    "description": "Backend for Universal Ticket Booking System",
    "main": "dist/server.js",
    "type": "commonjs",
    "scripts": {
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "start": "node --require ts-node/register/transpile-only dist/server.js",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate -- -d src/config/database.ts",
        "migration:run": "npm run typeorm migration:run -- -d src/config/database.ts",
        "migration:revert": "npm run typeorm migration:revert -- -d src/config/database.ts"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/handlebars": "^4.0.40",
        "@types/ioredis": "^4.28.10",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/mongoose": "^5.11.96",
        "@types/multer": "^1.4.13",
        "@types/node": "^20.10.0",
        "@types/uuid": "^10.0.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "handlebars": "^4.7.8",
        "helmet": "^7.2.0",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "lucide-react": "^0.515.0",
        "mongoose": "^8.15.1",
        "morgan": "^1.10.0",
        "multer": "^2.0.1",
        "nodemailer": "^6.9.7",
        "pdfkit": "^0.17.1",
        "pg": "^8.16.0",
        "qrcode": "^1.5.4",
        "redis": "^4.6.10",
        "reflect-metadata": "^0.1.14",
        "sharp": "^0.34.2",
        "socket.io": "^4.7.2",
        "ts-node": "^10.9.1",
        "typeorm": "^0.3.24",
        "typescript": "^5.2.2",
        "uuid": "^11.1.0",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
